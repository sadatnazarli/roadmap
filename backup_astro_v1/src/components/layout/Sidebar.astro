---
interface Props {
  roadmapSlug: string;
  sections: Array<{ id: string; title: string; level?: number }>;
}

const { roadmapSlug, sections = [] } = Astro.props;
---

<aside class="hidden lg:block fixed left-0 top-16 w-64 h-[calc(100vh-4rem)] bg-sidebar-bg dark:bg-slate-900 border-r border-gray-200 dark:border-slate-700 overflow-y-auto">
  <nav class="p-6 space-y-2">
    {sections.length > 0 ? (
      <>
        <h3 class="text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-widest mb-4">
          Mövzular
        </h3>
        <ul class="space-y-1">
          {sections.map((section) => (
            <li>
              <a
                href={`#${section.id}`}
                class={`block px-3 py-2 rounded-lg text-sm font-medium transition-all ${
                  section.level && section.level > 2
                    ? 'ml-4 text-gray-600 dark:text-gray-400'
                    : 'text-gray-900 dark:text-white'
                } hover:bg-gray-200 dark:hover:bg-slate-800 hover:text-primary dark:hover:text-blue-400`}
              >
                <span class="inline-block mr-2" data-completion-marker={`marker-${section.id}`}>
                  ○
                </span>
                {section.title}
              </a>
            </li>
          ))}
        </ul>
      </>
    ) : (
      <div class="text-sm text-gray-600 dark:text-gray-400">
        <p>Mövzular yüklənir...</p>
      </div>
    )}
  </nav>
</aside>

<script define:vars={{ roadmapSlug }}>
  // Listen for progress updates and update completion markers
  window.addEventListener('progress-updated', (event) => {
    const { lessonId, isCompleted } = event.detail;
    const marker = document.querySelector(`[data-completion-marker="marker-${lessonId}"]`);
    if (marker) {
      marker.textContent = isCompleted ? '✓' : '○';
      marker.className = isCompleted ? 'text-green-500 font-bold' : '';
    }
  });

  // Load initial completion status from localStorage
  document.addEventListener('DOMContentLoaded', () => {
    const markers = document.querySelectorAll('[data-completion-marker]');
    markers.forEach((marker) => {
      const markerId = marker.getAttribute('data-completion-marker').replace('marker-', '');
      const storageKey = `devmaps_progress_${roadmapSlug}_${markerId}`;
      const isCompleted = localStorage.getItem(storageKey) === 'true';
      if (isCompleted) {
        marker.textContent = '✓';
        marker.className = 'text-green-500 font-bold mr-2';
      }
    });
  });
</script>
