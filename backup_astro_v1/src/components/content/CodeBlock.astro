---
import CodeEditor from '../interactive/CodeEditor.jsx';

interface Props {
  lang?: string;
  filename?: string;
  title?: string;
  showLineNumbers?: boolean;
}

const { lang = 'bash', filename, title, showLineNumbers = false } = Astro.props;
---

<CodeEditor client:load lang={lang} filename={filename} title={title} showLineNumbers={showLineNumbers}>
  <slot />
</CodeEditor>
