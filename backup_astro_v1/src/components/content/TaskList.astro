---
import { Check } from 'lucide-react';

interface Task {
  id: string;
  title: string;
}

interface Props {
  lessonId: string;
  roadmapSlug?: string;
  items?: (Task | string)[];
}

const { lessonId, roadmapSlug = 'general', items = [] } = Astro.props;

// Normalize items to objects
const normalizedItems = items.map((item, idx) => {
  if (typeof item === 'string') {
    return { id: `task-${idx}`, title: item };
  }
  return item;
});
---

<div class="my-6 p-6 rounded-lg border border-gray-200 dark:border-slate-700 bg-gray-50 dark:bg-slate-900">
  <h4 class="font-semibold text-gray-900 dark:text-white mb-4">Tapşırıqlar</h4>
  <ul class="space-y-3">
    {normalizedItems.map((item) => (
      <li class="flex items-start gap-3">
        <input
          type="checkbox"
          id={`task-${lessonId}-${item.id}`}
          class={`task-checkbox mt-1 cursor-pointer rounded border-gray-300 text-blue-500 focus:ring-blue-500 dark:bg-slate-800 dark:border-slate-600 dark:text-blue-400`}
          data-lesson-id={lessonId}
          data-task-id={item.id}
          data-roadmap={roadmapSlug}
        />
        <label
          for={`task-${lessonId}-${item.id}`}
          class="flex-1 text-sm text-gray-700 dark:text-gray-300 cursor-pointer hover:text-gray-900 dark:hover:text-gray-100"
        >
          {item.title}
        </label>
      </li>
    ))}
  </ul>
</div>

<script>
  document.querySelectorAll('.task-checkbox').forEach((checkbox) => {
    const lessonId = checkbox.getAttribute('data-lesson-id');
    const taskId = checkbox.getAttribute('data-task-id');
    const roadmapSlug = checkbox.getAttribute('data-roadmap');
    const storageKey = `devmaps_task_${roadmapSlug}_${lessonId}_${taskId}`;

    // Load initial state
    checkbox.checked = localStorage.getItem(storageKey) === 'true';

    // Save state on change
    checkbox.addEventListener('change', () => {
      localStorage.setItem(storageKey, checkbox.checked ? 'true' : 'false');
    });
  });
</script>
