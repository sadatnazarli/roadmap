---
import RoadmapLayout from './RoadmapLayout.astro';
import ProgressTracker from '../components/interactive/ProgressTracker.jsx';
import QuizBlock from '../components/interactive/QuizBlock.jsx';
import CodeBlock from '../components/content/CodeBlock.astro';
import InfoBox from '../components/content/InfoBox.astro';
import LevelCard from '../components/content/LevelCard.astro';
import CommandCard from '../components/content/CommandCard.astro';
import ConceptCard from '../components/content/ConceptCard.astro';
import TaskList from '../components/content/TaskList.astro';
import DiagramCard from '../components/content/DiagramCard.astro';

interface Props {
  frontmatter?: {
    title?: string;
    description?: string;
  };
  children?: any;
}

const { frontmatter = {} } = Astro.props;
---

<RoadmapLayout 
  title={frontmatter.title || 'Roadmap'}
  description={frontmatter.description || 'Learning roadmap'}
  roadmapSlug="default"
  sections={[]}
>
  <slot />
</RoadmapLayout>

<style>
  :global(.mdx-root) {
    /* MDX content will render here */
  }
</style>
